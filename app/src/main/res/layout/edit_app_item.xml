<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/dialog_appContainer"
        android:layout_width="wrap_content"
        android:layout_height="78dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/appIcon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="28dp">

            <ImageView
                android:id="@+id/dialog_appIcon"
                android:layout_width="38dp"
                android:layout_height="38dp"
                app:srcCompat="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/dialog_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/appIcon_container"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/google_sans_bold"
                android:singleLine="true"
                android:text="Application Name"
                android:textSize="18sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/dialog_appRemove"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/dialog_item_detail"
            android:background="@drawable/rounded_bg"
            android:foreground="?attr/selectableItemBackground"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_delete" />

    </RelativeLayout>

</FrameLayout>